extends layout 

block content
    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='first_name') First Name: 
            input#first_name.form-control(type='text' placeholder='First name (Ameer)' name='first_name') 
            label(for='last_name') Last Name: 
            input#last_name.form-control(type='text' placeholder='Last name (S)' name='last_name')
            br
            br
        div.form-group
            label(for='username') Username: 
            input#username.form-control(type='text', placeholder='susshi94' name='username') 
            label(for='password') Password: 
            input#password.form-control(type='password', placeholder='*****' name='password')
            br
            br
            hr
        button.btn.btn-primary(type='submit') Submit